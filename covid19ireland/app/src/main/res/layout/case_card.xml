<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:padding="16dp">

        <TextView
            android:id="@+id/caseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Name: "
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/case_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="50dp"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/caseAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:text="Address: "
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/case_address_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/caseCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:text="Condition: "
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/case_condition_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/caseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="35dp"
            android:text="Status: "
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/case_status_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/deleteCase"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/my_button"
            android:paddingTop="2dp"
            android:paddingBottom="8dp"
            android:text="@string/delete_case"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <Button
            android:id="@+id/updateCase"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/my_button"
            android:paddingTop="2dp"
            android:paddingBottom="8dp"
            android:text="@string/update_case"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>